# ========================================
# 星瀚邨社区小程序 - 后端环境变量配置示例
# ========================================

# 服务器配置
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,https://servicewechat.com

# Supabase 配置
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# JWT 配置
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 微信小程序配置
WECHAT_APPID=wx_your_appid
WECHAT_SECRET=your_wechat_app_secret

# 小红书小程序配置
XHS_APPID=xhs_your_appid
XHS_SECRET=your_xhs_app_secret

# AI 服务配置（可选）
# 腾讯云 AI
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key

# 阿里云 AI（可选）
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret

# OpenAI API（可选）
OPENAI_API_KEY=sk-your_openai_api_key

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 数据库配置（如使用直连）
# DATABASE_URL=postgresql://user:password@host:5432/database

# Redis 配置（可选，用于缓存）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Sentry 错误追踪（可选）
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# 邮件服务配置（可选）
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@star-vast-village.com

# 短信服务配置（可选）
# SMS_PROVIDER=aliyun
# SMS_ACCESS_KEY_ID=your_sms_access_key_id
# SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
# SMS_SIGN_NAME=星瀚邨社区
# SMS_TEMPLATE_CODE=SMS_123456789
